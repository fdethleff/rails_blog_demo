<div class="comment-<%= comment.id %> container" style="border: 1px solid green; margin: 1em; padding: 1em;">
  <%= comment.user.name %><br />
  <p><%= comment.body %></p>
  <small>From <%= time_ago_in_words(comment.created_at) %></small>
  <% if current_user == comment.user %>
    <%= button_to "Destroy", [post, comment], method: :delete, class:"btn btn-danger m-2" %>
  <% end %>
</div>
