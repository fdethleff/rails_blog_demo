<div id="<%= dom_id post %>">
  <div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-6 fw-bold"><%= post.title %></h1>
      <p class="col-md-8 fs-4"><%= post.body %></p>
      <%= link_to "Show this post", post, class:"btn btn-primary btn-lg"%>
    </div>
  </div>
</div>
